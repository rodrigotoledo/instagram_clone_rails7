
<% if @users.present? %>
<div class="absolute -ml-[60px] m-5 border mt-4 w-[350px] bg-black text-white">
  <div class="w-auto">
    <div class="flex justify-center -mt-[16px]">
      <%= heroicon "chevron-up", class: "stroke-gray-200 fill-white flex-no-shrink h-[25px]" %>
    </div>
  </div>
  <div class="flex justify-end">
    <div data-controller="profiles" class="m-2">
      <%= heroicon "x-circle", class: "cursor-pointer", data: { action: "click->profiles#close" } %>
    </div>
  </div>
  <ul class="max-h-[250px] overflow-y-auto">
    <% @users.each do |user| %>
      <li class="m-5">
        <div class="flex items-center justify-between mt-3">
          <%= link_to image_tag(user.avatar, class: "w-10 h-10 rounded-full border p-[2px]"), profile_path(user), class: "inline-block", "data-turbo-frame": "_top" %>
          <div class="flex-1 ml-4 ">
            <h2 class="font-semibold text-sm"><%= user.username %></h2>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
<% end %>