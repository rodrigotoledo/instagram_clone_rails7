<%= form_with model: [post, PostComment.new], class: "flex items-center p-4" do |f| %>
  <%= heroicon "emoji-happy", class: "h-7" %>
  <%= f.text_field :comment, placeholder: "Add comment", class: "border-none flex-1 outline-none" %>
  <%= f.submit "Post", class: "font-semibold text-blue-400" %>
<% end %>